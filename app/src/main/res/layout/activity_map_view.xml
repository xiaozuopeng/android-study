<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.huaao.ejingwu.common.widget.indicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/spring_dots_indicator"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            app:dotsColor="@color/md_light_green_400"
            app:dotsCornerRadius="8dp"
            app:dotsSize="16dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2.5"/>

        <com.huaao.ejingwu.common.widget.indicator.SpringDotsIndicator
            android:id="@+id/spring_dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/worm_dots_indicator"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            app:dotsColor="@color/md_light_green_400"/>

        <com.huaao.ejingwu.common.widget.indicator.WormDotsIndicator
            android:id="@+id/worm_dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            app:dotsColor="@color/md_light_green_400"/>
    </RelativeLayout>

</layout>